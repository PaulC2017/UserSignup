@model List<UserSignup.Models.User>


<br />

<p>Please <a asp-controller="User" asp-action="Add">Sign up</a>.</p>


<form method="get">
    <table class="table">

        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Member Since</th>
            <th>Member ID</th>
            <th>Detail</th>
        </tr>

        @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.CreateDate</td>
            <td>@user.UserId</td>
            <td><a asp-controller="User" asp-action="Detail" asp-route-id="@user.UserId">Detail</a></td>

        </tr>
        
}

    </table>
    
</form>


